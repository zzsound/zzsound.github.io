---

// src/layouts/Layout.astro
import HamburgerMenu from '../components/HamburgerMenu6.astro';
import CookieBanner from '../components/CookieBanner.astro';

const navLinks = [
  { href: "/", text: "Home"},
  { href: "/01", text: "Bluetooth MIDI Controller Pro"},
  { href: "/02", text: "Grand Piano AUv3 2"},
  { href: "/03", text: "4Waves Synthesizer"},
  { href: "/04", text: "XYZ Synth"},
  { href: "/05", text: "MicroGrandPiano"},
  { href: "/06", text: "Bluetooth MIDI Keyboard"},
  { href: "/07", text: "Bluetooth MIDI Controller"},
  { href: "/08", text: "Bluetooth MIDI Pads"},
  { href: "/09", text: "Bluetooth MIDI Motion"},
  { href: "/10", text: "Grand Piano Auv3"},
  { href: "/11", text: "Random Ocean"},
  { href: "/AppsPrivacyPolicy", text: "Apps Privacy Policy"},
  { href: "/Privacy-policy", text: "Privacy policy"},
  { href: "/Contact", text: "Contact"},
