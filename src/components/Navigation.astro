---
// src/components/Navigation.astro
const links = [
  { href: "/", text: "Inicio" },
  { href: "/about", text: "Acerca" },
  { href: "/contact", text: "Contacto" }
];
---

<nav class="navigation">
  <ul>
    {links.map(link => (
      <li>
        <a href={link.href}>{link.text}</a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .navigation {
    background: #f3f4f6;
    padding: 1rem;
  }
  
  .navigation ul {
    display: flex;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .navigation a {
    color: #1e40af;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
  }
  
  .navigation a:hover {
    background: #dbeafe;
  }
</style>