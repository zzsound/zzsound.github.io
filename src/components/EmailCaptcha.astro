---
// src/components/SafeEmail.astro
const emailLocal = "zzsound4";
const emailDomain = "gmail.com";
---

<div class="email-container">
  <button 
    onclick="this.nextElementSibling.innerHTML = `${this.dataset.local}@${this.dataset.domain}`; this.nextElementSibling.style.display = 'inline'; this.style.display = 'none';"
    data-local={emailLocal}
    data-domain={emailDomain}
    class="email-button"
  >
    Show email
  </button>
  <span class="email-display" style="display: none;"></span>
</div>

<style>
  .email-button {
    cursor: pointer;
    background: none;
    border: none;
    color: #3b82f6;
    text-decoration: underline;
    padding: 0;
    font: inherit;
  }
  .email-button:hover {
    color: #2563eb;
  }
  .email-display {
    margin-left: 0.5rem;
  }
</style>
